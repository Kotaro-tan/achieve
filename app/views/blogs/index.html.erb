<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <p><%= notice %></p>
        <h1>ブログ一覧</h1>
        <p><%= link_to "ブログを作成する", new_blog_path, class: "btn btn-default" %></p>
        <% @blogs.each do |blog| %>
            <div class="row">
                <h2><strong><%= blog.title %></strong></h2>
                <p><%= blog.content %></p>
                <p><%= link_to "編集", edit_blog_path(blog.id), class: "btn btn-default btn-sm btn-success" %></p>
                <p><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: "btn btn-default btn-sm btn btn-danger" %></p>
            </div>
        <% end %>
    </div>
</div>







